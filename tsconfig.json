{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "target": "es5",
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "outDir": "lib",
    "lib": ["es2015"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "emitDecoratorMetadata": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules", "examples"]
}
